
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Login</title>

    <link rel="stylesheet" href="~/web-Admin-Login/css/styel.css">
</head>
<body>
    <div class="container">
        <div class="form">
            <img src="~/web-Admin-Login/img/admin.jpg" class="admin-img">
            <h2>Admin Login</h2>
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="txtb">
                    <input type="text" name="UserName" placeholder="Username">  <!-- name ler veri tabanındaki başlıklar ile aynı olmalı örnm UserName olmalı. username olmaz-->
                </div>
                <div class="txtb">
                    <input type="password" name="Password" placeholder="Password">
                </div>
                <input type="submit" class="logbtn" value="Login">
            }
        </div>
    </div>
</body>
</html>