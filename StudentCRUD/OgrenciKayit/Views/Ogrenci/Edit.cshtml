@model OgrenciKayit.Models.Ogrenci

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ögrenci Düzenle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OgrID)

        <div class="form-group">
            @Html.Label("Ad", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.OgrAd, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OgrAd, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Soyad", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.OgrSoyad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OgrSoyad, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Mail", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.OgrMail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OgrMail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Adres", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.OgrAdres, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OgrAdres, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Öğrenci Sayfasına Geri Dön", "Index", "", new { style = "text-decoration: none; color:#FFF;", @class = "btn btn-warning" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
